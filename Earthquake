class Earthquake_stats:
    
    def __init__(self, time, lat,long,depth,mag,magType,gap,place,status,locationSource ):
        self.time = time
        self.lat = lat
        self.long = long
        self.depth = depth
        self.mag = mag
        self.magType = magType
        self.gap = gap
        self.place = place
        self.status = status
        self.locationSource = locationSource

    def as_dict(self):
        return {'time': self.time, 'latitude': self.lat, 'longitude': self.long,'depth': self.depth,'magnitude': self.mag,'magnitudeType': self.magType,
                'gap': self.gap,'place': self.place,'status': self.status,'locationSource': self.locationSource}
        
